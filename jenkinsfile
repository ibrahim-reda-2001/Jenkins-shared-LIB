@Library('SharedLibraryNTI') _
pipeline {
    agent any
    environment {
        DOCKER_REPO = 'docker.io/ibrahimelmsery1'
        IMAGE_NAME = 'app3'
        DOCKER_CREDENTIALS_ID = 'docker-hub-cred'
        K8S_API_SERVER = 'https://172.31.38.77:6443'
        K8S_NAMESPACE = 'default'
        
    }
    stages {
        stage('Clone Repository') {
            steps {
                git branch: 'master', 
                    credentialsId: 'github-token', 
                    url: 'https://github.com/ibrahim-reda-2001/Jenkins-shared-LIB.git'
            }
        }
        stage('Build') {
            steps {
                script {
                    buildandpushDocker(dockerCredentialsID: "${DOCKER_CREDENTIALS_ID}",repoName: "${DOCKER_REPO}",imageName: "${IMAGE_NAME}",dockerfile: "Dockerfile")
                }
            }
        }
    }
}